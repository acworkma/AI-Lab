      "type": "Microsoft.Network/p2svpnGateways",
      "apiVersion": "2023-11-01",
      "name": "[parameters('vpnGatewayName')]",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "properties": {
